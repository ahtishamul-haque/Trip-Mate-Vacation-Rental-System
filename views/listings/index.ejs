<% layout("/layouts/boilerplate") %>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
      color: #D4AF37;
    }

    .filter p{
      font-size: 0.8rem;
    }

    .tax-info{
      display: none;
    }
    
    .tax-toggle{
      border: 1px solid #D4AF37;
      border-radius: 1rem; 
      height: 2rem;
      margin-left: 2rem;
      padding: 1rem;
      display: flex;
      align-items: center;
    }

    /* Responsive Styles for screen widths less than 500px */
    @media (min-width: 400px) and (max-width: 500px) {
      .filter {
        margin-left: 10px !important;
        margin-right: 15px !important;
        margin-top: 10px !important;
        padding-left: 10px !important;
      }

      .tax-toggle {
        margin-left: 10px !important;
      }
    }
  </style>
  <div id="filters">
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/68539a1827f881dd817cd08f'">
     <div><i class="fa-solid fa-fire"></i></div>
     <p>Trending</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/6853a40027f881dd817cd12f'">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/68540ac5d6425c497e474a9f'">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/685406c2d6425c497e474a69'">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/6853980d27f881dd817cd084'">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/6853a86627f881dd817cd174'">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/6853aa7b27f881dd817cd181'">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/6854058fd6425c497e474a5d'">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter" onclick="window.location.href='https://major-project-trip-mate.onrender.com/listings/68540820d6425c497e474a76'">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"/>
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>      
      </div>
    </div>

  <div class = "row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href = "/listings/<%=listing._id%>" class = "listing-link">
    <div class = "card col listing-card">
      <img
         src = "<%=listing.image.url%>"
         class = "card-img-top"
         alt = "listing_image"
         style = "height: 20rem"
      />
      <div class = "card-img-overlay"></div>
      <div class = "card-body">
        <p class = "card-text">
          <b><%=listing.title%></b><br/>
          &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
          <i class="tax-info">&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
    <% } %>
  </div>
  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", ()=> {
      let taxInfo = document.getElementsByClassName("tax-info");
      for(info of taxInfo){
        if(info.style.display != "inline"){
          info.style.display = "inline";
        }else{
          info.style.display = "none";
        }
      }
    });
  </script>
